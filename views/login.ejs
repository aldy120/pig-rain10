      <% if (message.length > 0) { %>
      <div class="box flash">
        <p><%= message %></p>
      </div>
      <% } %>
      <div class="box">
        <h3>會員登入</h3>
        <form action="/user/login" onsubmit="return login();" method="post">
          <span id='notice_login'></span><br>
          <input placeholder="Email" id='user' type="text" name="user"></p><br>
          <input placeholder="Password" id='password' type="password" name="password"></p><br>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input class='button' type="submit" value="登入"><br>
          <p><a href="/user/register">註冊</a>或<a href="/user/forgetpw">忘記密碼</a></p>
        </form>
      </div>
    </div>
    <div class='footer'>
      <hr>
      <h5>Contact us</h5>
      <h5>|</h5>
      <h5>About us</h5>
    </div>
  </div>
</body>

</html>